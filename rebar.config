
{cover_enabled, true}.

{erl_opts, [
    debug_info, warnings_as_errors, {parse_transform, lager_transform}
]}.

% {edoc_opts, [{dir, "../../doc"}]}.

{project_plugins, [pc]}.


{deps, [
    {nklib, {git, "https://github.com/pickme467/nklib", {branch, "msi_isigw"}}},
    {cowboy, {git, "https://github.com/extend/cowboy", {tag, "2.9.0"}}},
    certifi,
    ssl_verify_fun,
    % Used for tests
    {gun,  {git, "https://github.com/ninenines/gun.git", {branch, "master"}}},
    {meck, "0.8.12"}
]}.


{xref_checks, [
    undefined_function_calls, undefined_functions,
    locals_not_used, deprecated_function_calls, deprecated_functions
]}.

{profiles, [{test, [{deps, [meck]}]}]}.
