
{cover_enabled, true}.

{erl_opts, [
    debug_info, warnings_as_errors, {parse_transform}
]}.

% {edoc_opts, [{dir, "../../doc"}]}.

{project_plugins, [pc]}.


{deps, [
    {nklib, {git, "https://github.com/VoiSmart/nklib.git", {branch, "voismart"}}},
    {cowboy, "~> 2.6"},
    certifi,
    ssl_verify_fun
]}.


{xref_checks, [
    undefined_function_calls, undefined_functions,
    locals_not_used, deprecated_function_calls, deprecated_functions
]}.

{profiles, [{test, [{
    deps, [
        meck,
        {gun,  "~> 1.3"}
    ]}]}
]}.
